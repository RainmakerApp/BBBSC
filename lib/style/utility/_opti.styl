.nano
  position relative
  width 100%
  height 100%
  & > .nano-content
    position absolute
    overflow scroll
    overflow-x hidden
    top 0
    right 0
    bottom 49px
    left 0
    &:focus
      outline thin dotted
    &::-webkit-scrollbar
      display none
  & > .nano-pane
    background #F3F3F4
    position absolute
    width 12px
    right 0
    top 0
    bottom 49px
    opacity 1
    padding 5px 0
    -webkit-transition .2s
    -moz-transition .2s
    -o-transition .2s
    transition .2s
    -moz-border-radius 5px
    -webkit-border-radius 5px
    border-radius 5px
    & > .nano-slider
      background #D9D9D9
      position relative
      margin 0 2px
      -moz-border-radius 3px
      -webkit-border-radius 3px
      border-radius 3px

.has-scrollbar
  & > .nano-content
    &::-webkit-scrollbar
      display block

.nano:hover > .nano-pane, .nano-pane.active, .nano-pane.flashed
  visibility visible\9
  opacity 0.99


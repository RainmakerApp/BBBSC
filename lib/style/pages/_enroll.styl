.page.page-enroll
	color $text
	.jumbotron
		background-image url(../images/banners/enroll.png)
		position relative
		.language
			background #FFF
			bottom 0
			color $green
			cursor pointer
			left 5%
			padding 10px 20px
			position absolute
			z-index 1
			a
				color $green
				text-decoration none
	.container
		&#main
			padding-bottom 60px
			padding-top 60px
		&.main
			color $text
			font-size 20px
			font-weight 100
			line-height 32px
			padding-bottom 15px
			padding-top 15px
	.table.programs
		h2
			@extend .tr-up
		strong
			display block
			margin-bottom 5px
		ul li
			margin-bottom 30px
			a
				border 0
				text-decoration underline
	.section
		background-color #f5f5f5
		font-size 20px
		font-weight 100
		line-height 32px
		padding-bottom 30px
		padding-top 30px
		color $text
		@media (max-width: $sm)
			.center
				text-align left !important
		clearfix()
		&.inverse
			background-color white
		p.sub
			margin-bottom 60px
		background-color $lightest-gray
		h1, h2
			font-weight 300
			margin-bottom 30px
			margin-top 0
			@extend .tr-up
			p
				font-size 18px
				margin 0 0 10px
				@extend .tr-init
				a
					font-weight 600
		h3
			margin 0
			@extend .tr-up
		small
			font-size 16px
		ul:not(.table), ol
			list-style none
			padding 0
		ul.table
			li
				font-size 18px
				line-height 20px
				&:not(:last-of-type)
					margin-bottom 45px
		.icons
			.col, .col p
				margin-bottom 0
				padding-bottom 0
				.tr-up
					font-size 16px
					font-weight 600
			&.enroll-icons
				padding-bottom 30px
				padding-top 30px
				p.text
					font-size 18px
					font-weight 100
					line-height 22px
					margin-top 0
	.note
		font-size 14px
		line-height 14px
		margin-top 45px
	.thumbs
		.thumb
			background-color black
			background-size cover
			color white
			margin 0 auto
			@media (min-width $sm)
				max-width 80%
			height 160px
			line-height 160px
			padding-left 15px
			padding-right 15px
			position relative
			text-align center !important
			&:after
				background-image linear-gradient(top, rgba(black, 0.25), rgba(black, 0.75))
				bottom 0
				content ''
				left 0
				position absolute
				right 0
				top 0
				// Hide
				transition all 300ms ease
				opacity 0
				visibility hidden
				z-index 1
			&:hover:after
				opacity 1
				visibility visible
			h2 span
				font-size 16px
				line-height 18px
				display inline-block
				position relative
				vertical-align middle
				z-index 2
				@extend .tr-up
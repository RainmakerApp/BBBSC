.page.page-teams
	color $text
	.jumbotron
		background-image url(../images/banners/mentor-support.png)
	.container#main
		padding-bottom 30px
		padding-top 30px
		.content
			.table h2
				margin-bottom 15px
				margin-top 0
				@extend .tr-up
			.action
				a
					color #FFF
					.orange
						background-color $secondary
						font-size 28px
						font-weight 600
						line-height 28px
						table
							width 100%
					&:hover
						.orange
							background-color darken($secondary, 25%)
				div
					font-weight bold
					margin-bottom 30px
					padding-bottom 15px
					padding-left 30px
					padding-right 30px
					padding-top 15px
					transition all 300ms ease
			ul.teams
				list-style none
				margin 0
				padding 0
				li
					border-bottom 1px solid #E6E6E6
					margin-bottom 15px
					padding-bottom 30px
					padding-top 15px
					clearfix()
					.col
						padding-bottom 0
					h1
						@extend .tr-init
					p
						color #A1A1A1
						font-size 16px
						line-height 26px
					a
						color inherit
						text-decoration none
						margin-top 0
					.stat-row
						margin-bottom 20px
						clearfix()
					.stat
						float left
						margin-bottom 5px
						width 50%
						@media (min-width: $sm)
							float left
							margin-bottom 0
							width 20%
						span
							display block
						.num
							font-size 20px
							font-weight 600
							margin-bottom 1px
						.text
							color #9A9A9A
							font-size 14px
							font-weight 300
/*
 * NIB
 * ===
 */
@import 'nib'
 
/* 
 * Normalize
 * ====
 */
@import 'utility/_normalize.styl'

/* 
 * Grid
 * ====
 */
@import 'utility/_grid.styl'

/*
 * Variables
 * =========
 */
@import 'utility/_variables.styl'

/*
 * Navigation
 * ==========
 */
@import 'blocks/_navigation.styl'

/*
 * Footer
 * ======
 */
@import 'blocks/_footer.styl'

/* 
 * BBBS Icon Font
 * ==============
 */
@import 'utility/_bbbs.styl'

/*
 * Page Specific Styles
 * ====================
 */
@import 'blocks/_content.styl'
@import 'pages/_about.styl'
@import 'pages/_mentor-support.styl'
@import 'pages/_enroll.styl'
@import 'pages/_volunteer.styl'
@import 'pages/_get-started.styl'
@import 'pages/_donate.styl'
@import 'pages/_events.styl'
@import 'pages/_teams.styl'
@import 'pages/_posts.styl'
@import 'pages/_home.styl'
@import 'pages/_contact.styl'
@import 'pages/_fundraiser.styl'

/*
 * General Classes
 * ===============
 */
body.show-mobile
	overflow hidden
	
.jumbotron:not(.home)
  background-color lighten($primary, 75%)
  background-size cover
  position relative
  text-align center
  z-index 1
  @media (max-width: $sm)
    text-align left
  @media (min-width: $md)
    margin-top -116px
    padding-bottom 150px
    padding-top 266px
  @media (max-width: 991px)
    margin-top -116px
    padding-bottom 50px
    padding-top 166px
  h1
    color $primary
    margin 0
    padding 0
    @media (min-width: $md)
      font-size 100px
    @media (max-width: 991px)
      font-size 48px

ol.dots
  bottom 15px
  left 0
  padding 0
  position absolute
  right 0
  text-align center
  z-index 1
  li
    background rgba(white, 0.3)
    border-radius 50%
    cursor pointer
    display inline-block
    float none !important
    height 12px
    text-indent -9999px
    transition background 300ms ease
    width 12px
    &:nth-child(n+2)
      margin-left 5px
    &.active
      background rgba(white, 0.9)
ul.stars
  li
    margin-bottom 15px
    padding-left 25px
    position relative
    &:before
      content "\f006"
      display inline-block
      font normal normal normal 14px/1 FontAwesome
      font-size inherit
      font-smoothing antialiased
      left 0
      position absolute
      text-rendering auto
      top 2px
.table, .page .content .table
  h2
    background $green
    color #FFF
    font-size 16px
    font-weight 600
    margin-top 15px
    padding 5px 10px
    text-transform initial
    tr-ls(0.025em)
  ul
    list-style none
    margin 0
    padding 10px 0 10px 50px
    li
      margin-bottom 10px
      position relative
      &:before
        background transparent
        border 2px solid $primary
        border-radius 50%
        content ''
        height 10px
        left -30px
        position absolute
        top 3px
        width 10px
      a
        color #4C92C9
        border-bottom 1px solid
        text-decoration none
        &:hover
          color darken(#4C92C9, 75%)
.page-sidebar
  .sidebar
    .input-icon
      position relative
      i.icon-search
        font-size 20px
        position absolute
        right 10px
        top 50%
        transform translateY(-50%)
    input
      box-sizing border-box
      display block
      margin-bottom 30px
      outline 0
      padding 5px 10px
      width 100%
    section
      background-color #F5F5F5
      margin-bottom 30px
      padding 30px 30px 20px
      clearfix()
      &.fundraisers
        padding-bottom 0
        @media (min-width: $sm)         
          .col-md-8
            padding-left 0
            padding-top 10px
      h3
        border-bottom 6px solid $primary
        margin-bottom 10px
        padding-bottom 10px
      ul
        list-style none
        li
          clear both
          display block
          margin-bottom 10px
          .pull-left
            margin-bottom 10px
            font-weight 100
          .pull-right
            font-weight 600
          img
            min-width 100%
          a
            border 0
            color $secondary
            text-decoration underline
          p
            font-size 16px
            font-weight 600
            line-height 18px
.progress-bar
  background-color #E6E6E6
  height 10px
  margin-bottom 20px
  width 100%
  .progress-bar-fill
    background $secondary
    height 10px
// FORM STYLES
.form
  .input-group
    border 2px solid #303030
    display block
    margin 0 0 15px
    padding 15px
    clearfix()
    label
      display block
      font-size 12px
      font-weight 600
      margin 0 0 10px
      @extend .tr-up
    input, textarea, select
      appearance none
      background none
      border 0
      border-radius 0
      font-size 16px
      font-weight 300
      outline none
      padding 0
      width 100%
    textarea
      padding 0
    &.split
      .input-column
        float left
        width 50%
        &:first-of-type
          input 
            border-right 1px solid
        &:last-of-type
          input, label
            padding-left 15px
    &#money
      position relative
      &:before
        content '$'
        position absolute
        top 40px
      input
        padding-left 15px
    &#select
      position relative
      &:after
        border-left 6px solid transparent
        border-right 6px solid transparent
        border-top 6px solid #00B5D7
        content ''
        height 0
        position absolute
        right 15px
        top 45px
        width 0
      input
        padding-right 15px
  button
    appearance none
    background-color $green
    border 0
    color white
    display block
    font-size 28px
    font-weight 600
    margin 30px 0 0
    outline 0
    padding 15px 0
    text-align center
    transition all 300ms ease
    width 100%
    tr-ls(0.025em)
    &:hover, &:active, &:focus
      background-color darken($green, 15%)
// Filter Function
filter()
  vendor('filter', arguments, only: webkit moz o official)

// Fade In Fundraiser Modal
.create-fundraiser
  overflow hidden
  .create-fundraiser__wrapper
    opacity 1
    visibility visible
  #canvas
    filter blur(20px)
.create-fundraiser__wrapper
  background rgba(white, 0.15)
  bottom 0
  left 0
  opacity 0
  overflow scroll
  @media (min-width $sm)
    padding 60px
  @media (max-width ($sm - 1))
    padding 60px 15px 15px
  position absolute
  right 0
  top 0
  transition all 300ms ease
  visibility hidden
  z-index 5
  .close-modal
    @media (min-width $sm)
      height 40px
      top 30px
      right 30px
      width 40px
      &:before, &:after
        height 30px
        width 1px
        top 5px
    @media (max-width ($sm - 1))
      height 30px
      width 30px
      top 15px
      right 15px
      &:before, &:after
        height 20px
        top 5px
    background #FFF
    border-radius 50%
    cursor pointer
    display block
    position absolute
    &:before, &:after
      background-color $text
      content ''
      left 50%
      position absolute
      width 1px
    &:before
      transform rotate(-45deg)
    &:after
      transform rotate(45deg)
  .wrapper__title
    color #4F4F4F
    @media (min-width $sm)
      margin-bottom 60px
    @media (max-width ($sm - 1))
      margin-bottom 30px
    text-align center
    h1
      @media (min-width $sm)
        font-size 54px
      margin 0
      @extend .tr-up
    p
      @media (min-width $sm)
        font-size 28px
      font-weight 300
      margin 0
  .wrapper__forms
    margin 0 auto
    @media (min-width $sm)
      width 90%
      width 600px
    .wrapper__forms-nav
      display none
      margin 0 0 15px
      clearfix()
      ul
        list-style none
        margin 0
        padding 0
        li
          color $text
          display inline
          font-size 18px
          line-height 28px
          @media (max-width $sm)
            span.text
              display none
          span.num
            background-color none
            border 1px solid
            border-radius 50%
            color $text
            display inline-block
            font-weight 600
            height 30px
            margin 0 5px 0 0
            text-align center
            width 30px
        &.complete
          li
            font-weight 300
            span.num
              background-color $text
              border 1px solid $text
              color white
            &.complete span.num
              background-color $green
              border 1px solid $green
            &:not([data-related='2'])
              display none
    .step
      background white
      color $text
      padding 30px 30px 45px
      position relative
      @media (min-width $sm)
        padding 50px 100px 60px
      &:not([data-step='1'])
        display none
      &[data-step='4'],
      &[data-step='5']
        .input-group
          border-radius 3px
      &[data-step='6']
        background transparent
        color #FFF
        text-align center
        i
          font-size 72px
      h1
        font-size 28px
        font-weight 300
        margin 0 0 15px
        text-align center
      a.facebook-login
        background-color #3B5998
        border-radius 2px
        color white
        display block
        font-weight 600
        line-height 50px
        transition all 300ms ease
        text-align center
        text-decoration none
        width 100%
        @extend .tr-up
        tr-ls(0.05em)
        &:hover
          background-color darken(#3B5998, 15%)
      span.or
        border-bottom 1px solid darken($text, 25%)
        display block
        margin 30px 0
        position relative
        width 100%
        &:after
          background white
          content 'or'
          font-size 24px
          font-weight 300
          left 50%
          position absolute
          text-align center
          transform translateY(-50%) translateX(-50%)
          width 60px
      .form 
        #group
          display none
        .input-group
          border 1px solid #E1E1E1
          transition border 300ms ease
          &.focus
            border 1px solid darken(#E1E1E1, 50%)
        button
          background #59C77F
          border-radius 2px
          color white
          font-size 28px
          line-height 30px
          font-weight 600
          tr-ls(0.075em)
          @extend .tr-up
          &:hover, &:focus
            background darken(#59C77F, 15%)
      .featured__image-container
        background-color #EEE
        border-radius 3px
        height 160px
      .btn-row
        margin 0 0 -15px
        width 100%
        clearfix()
        .col
          padding 0 15px 0
        .btn
          display table
          float left
          table-layout fixed
          text-align center
          vertical-align middle
          a
            color #00B5D7
            border 1px solid
            border-radius 3px
            display table-cell
            height 70px
            margin 0 0 30px
            position relative
            text-decoration none
            transition all 300ms ease
            vertical-align middle
            width 100%
            @extend .tr-up
            small
              color #A1A1A1
              font-weight 300
              text-transform lowercase
            &:hover
              background-color rgba(#00B5D7, 0.1)
            input[type=file]
              appearance none
              background none
              border 0
              outline 0
              opacity 0
              position absolute
              left 0
              right 0
              bottom 0
              top 0
      .small-btn-row
        margin 0 -5px
        clearfix()
        .btn
          float left
          padding 0 5px
          text-align center
          @extend .col-sm-4
          &.active
            a
              color #00B5D7
              &:hover
                background-color rgba(#00B5D7, 0.1)
          a
            color #E1E1E1
            border 1px solid
            border-radius 3px
            display block
            height 60px
            line-height 60px
            margin 0 0 30px
            text-decoration none
            transition all 300ms ease
            vertical-align middle
            width 100%
            @extend .tr-up
            &:hover
              background-color rgba(#E1E1E1, 0.25)
            small
              color #A1A1A1
              font-weight 300
              text-transform lowercase
      .options
        margin-top 15px
        a
          color $text
          font-weight 600
    .select__wrapper
      background-color white
      display none
      .select__wrapper-gallery
        border 1px solid #E1E1E1
        border-radius 3px
        height 260px
        margin-bottom 30px
        overflow scroll
        padding 30px 15px
        .col
          padding 0 15px 30px
        .active .thumb
          border 2px solid $green
        .thumb
          background-size cover
          border 2px solid transparent
          border-radius 3px
          cursor pointer
          height 100px
          overflow hidden
          width 100%
      .btn-row > .btn > a
        border 2px solid #59C77F
        color #59C77F
        font-size 20px
        font-weight 600
        tr-ls(0.05em)
        &:hover
          background rgba(#59C77F, 0.15)
// Pagination for Blogs / Events
.pagination
  ul
    list-style none
    margin 0
    padding 0
    li
      display inline-block
      line-height 24px
      padding 0 6px
      &.active
        border 2px solid $green
        margin-right 3px
        a
          color $green
  h4
    line-height 24px
    font-weight 600
  a
    color #E6E6E6
    text-decoration none
    transition color 300ms ease
    display inline-block
    line-height 24px
    padding 0 6px
    &.selected
      border 2px solid $green
      color $green
      margin 0 3px
    &:hover
      color lighten($text, 15%)
  .pg-next:before
    content 'Next '
  .pg-prev:after
    content ' Previous'
  .col-md-6
    .pg-next, .pg-prev
      display none
  .col-md-3
    &.next .pg:not(.pg-next)
      display none
    &.prev .pg:not(.pg-prev)
      display none
.pane:not(.active)
  display none
#canvas
  transform translate3d(0, 0, 0)
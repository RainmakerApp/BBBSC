/*
 * General Classes
 * ===============
 */
.hide
  display none
#date .col
  padding-bottom 0
  
body.show-mobile
	overflow hidden
span.or
  border-bottom 1px solid darken($text, 25%)
  display block
  margin 30px 0
  position relative
  width 100%
  &:after
    background white
    content 'or'
    font-size 24px
    font-weight 300
    left 50%
    position absolute
    text-align center
    transform translateY(-50%) translateX(-50%)
    width 60px
.jumbotron:not(.home)
  background-color lighten($primary, 75%)
  background-position top center
  background-size cover
  position relative
  text-align center
  z-index 1
  @media (max-width: $sm)
    text-align left
  @media (min-width: $md)
    margin-top -116px
    padding-bottom 100px
    // padding-top 266px
  @media (max-width: 991px)
    margin-top -116px
    padding-bottom 50px
    padding-top 100px
  &:after
    content ''
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background rgba(black, 0.4)
    z-index 0
  h1
    color #FFF
    margin 0
    padding 0
    position relative
    z-index 1
    @media (min-width: $md)
      font-size 100px
      margin-top -50px
    @media (max-width: 991px)
      font-size 48px

ol.dots
  bottom 15px
  left 0
  padding 0
  position absolute
  right 0
  text-align center
  z-index 1
  li
    background rgba(white, 0.3)
    border-radius 50%
    cursor pointer
    display inline-block
    float none !important
    height 12px
    text-indent -9999px
    transition background 300ms ease
    width 12px
    &:nth-child(n+2)
      margin-left 5px
    &.active
      background rgba(white, 0.9)
ul.stars
  li
    margin-bottom 15px
    padding-left 25px
    position relative
    &:before
      content "\f006"
      display inline-block
      font normal normal normal 14px/1 FontAwesome
      font-size inherit
      font-smoothing antialiased
      left 0
      position absolute
      text-rendering auto
      top 2px
.table, .page .content .table
  h2
    background $green
    color #FFF
    font-size 16px
    font-weight 600
    margin-top 15px
    padding 5px 10px
    text-transform initial
    tr-ls(0.025em)
  ul
    list-style none
    margin 0
    padding 10px 0 10px 50px
    li
      margin-bottom 10px
      position relative
      &:before
        background transparent
        border 2px solid $primary
        border-radius 50%
        content ''
        height 10px
        left -30px
        position absolute
        top 3px
        width 10px
      a
        color #4C92C9
        border-bottom 1px solid
        text-decoration none
        &:hover
          color darken(#4C92C9, 75%)
.page-sidebar
  .sidebar
    .input-icon
      position relative
      i.icon-search
        font-size 20px
        position absolute
        right 10px
        top 50%
        transform translateY(-50%)
    input
      box-sizing border-box
      display block
      margin-bottom 30px
      outline 0
      padding 5px 10px
      width 100%
    section
      background-color #F5F5F5
      margin-bottom 30px
      padding 30px 30px 20px
      clearfix()
      &.fundraisers
        padding-bottom 0
        @media (min-width: $sm)         
          .col-md-8
            padding-left 0
            padding-top 10px
      h3
        border-bottom 6px solid $primary
        margin-bottom 10px
        padding-bottom 10px
      ul
        list-style none
        li
          clear both
          display block
          margin-bottom 10px
          .pull-left
            margin-bottom 10px
            font-weight 100
          .pull-right
            font-weight 600
          img
            min-width 100%
          a
            border 0
            color $secondary
            text-decoration underline
            &:hover
              border 0 !important
          p
            font-size 16px
            font-weight 600
            line-height 18px
.progress-bar
  background-color #E6E6E6
  height 10px
  margin-bottom 20px
  width 100%
  .progress-bar-fill
    background $secondary
    height 10px
// FORM STYLES
.form
  .input-group
    border 2px solid #E1E1E1
    display block
    margin 0 0 15px
    padding 15px
    transition all 300ms ease
    &.focus
      border 2px solid darken(#E1E1E1, 50%)
    clearfix()
    label
      display block
      font-size 12px
      font-weight 600
      margin 0 0 10px
      @extend .tr-up
    input, textarea, select
      appearance none
      background none
      border 0
      border-radius 0
      font-size 16px
      font-weight 300
      outline none
      padding 0
      width 100%
    textarea
      padding 0
    &.split
      .input-column
        float left
        width 50%
        &:first-of-type
          input 
            border-right 1px solid
        &:last-of-type
          input, label
            padding-left 15px
    &#money
      position relative
      &:before
        content '$'
        position absolute
        top 40px
      input
        padding-left 15px
    &#select
      position relative
      &:after
        border-left 6px solid transparent
        border-right 6px solid transparent
        border-top 6px solid #00B5D7
        content ''
        height 0
        position absolute
        right 15px
        top 45px
        width 0
        z-index 0
      select
        position relative
        z-index 1
      input
        padding-right 15px
  button, a.button
    appearance none
    background-color $green
    border 0
    color white
    display block
    font-size 28px
    font-weight 600
    margin 30px 0 0
    outline 0
    padding 15px 0
    text-align center
    text-decoration none
    transition all 300ms ease
    width 100%
    tr-ls(0.025em)
    &:hover, &:active, &:focus
      background-color darken($green, 15%)
// Filter Function
filter()
  vendor('filter', arguments, only: webkit moz o official)



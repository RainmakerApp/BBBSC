  .create-fundraiser__wrapper
    opacity 1
    visibility visible
  #canvas
    opacity 0.25
.create-fundraiser__wrapper
  background rgba(white, 0.5)
  bottom 0
  left 0
  opacity 0
  overflow scroll
  @media (min-width $sm)
    padding 60px
  @media (max-width ($sm - 1))
    padding 60px 15px 15px
  position absolute
  right 0
  top 0
  transition all 300ms ease
  visibility hidden
  z-index 5
  .close-modal
    @media (min-width $sm)
      height 40px
      top 30px
      right 30px
      width 40px
      &:before, &:after
        height 30px
        width 1px
        top 5px
    @media (max-width ($sm - 1))
      height 30px
      width 30px
      top 15px
      right 15px
      &:before, &:after
        height 20px
        top 5px
    background #FFF
    border-radius 50%
    cursor pointer
    display block
    position absolute
    &:before, &:after
      background-color $text
      content ''
      left 50%
      position absolute
      width 1px
    &:before
      transform rotate(-45deg)
    &:after
      transform rotate(45deg)
  .wrapper__title
    color #4F4F4F
    @media (min-width $sm)
      margin-bottom 60px
    @media (max-width ($sm - 1))
      margin-bottom 30px
    text-align center
    h1
      @media (min-width $sm)
        font-size 54px
      margin 0
      @extend .tr-up
    p
      @media (min-width $sm)
        font-size 28px
      font-weight 300
      margin 0
  .wrapper__forms
    margin 0 auto
    @media (min-width $sm)
      width 90%
      width 600px
    .wrapper__forms-nav
      display none
      margin 0 0 15px
      clearfix()
      ul
        list-style none
        margin 0
        padding 0
        li
          color $text
          display inline
          font-size 18px
          line-height 28px
          @media (max-width $sm)
            span.text
              display none
          span.num
            background-color none
            border 1px solid
            border-radius 50%
            color $text
            display inline-block
            font-weight 600
            height 30px
            margin 0 5px 0 0
            text-align center
            vertical-align middle
            width 30px
            i
              line-height 28px
        &.complete
          li
            font-weight 300
            span.num
              background-color $text
              border 1px solid $text
              color white
            &.complete span.num
              background-color $green
              border 1px solid $green
            &:not([data-related='1'])
              display none
    .step
      background white
      box-shadow 0 0 145px rgba(black, 0.30)
      color $text
      padding 30px 30px 45px
      position relative
      @media (min-width $sm)
        padding 50px 100px 60px
      &[data-step]
        display none
      &[data-step='4'],
      &[data-step='5']
        .input-group
          border-radius 3px
      &[data-step='6']
        background transparent
        color #FFF
        text-align center
        i
          font-size 72px
      h1
        font-size 28px
        font-weight 300
        margin 0 0 15px
        text-align center
      a.facebook-login
        background-color #3B5998
        border-radius 2px
        color white
        display block
        font-weight 600
        line-height 50px
        transition all 300ms ease
        text-align center
        text-decoration none
        width 100%
        @extend .tr-up
        tr-ls(0.05em)
        &:hover
          background-color darken(#3B5998, 15%)
      .form 
        #group
          display none
        .input-group
          border 1px solid #E1E1E1
          transition border 300ms ease
          &.focus
            border 1px solid darken(#E1E1E1, 50%)
        button
          background #59C77F
          border-radius 2px
          color white
          font-size 28px
          line-height 30px
          font-weight 600
          tr-ls(0.075em)
          @extend .tr-up
          &:hover, &:focus
            background darken(#59C77F, 15%)
      .featured__image-container
        background-color #EEE
        background-size cover
        border-radius 3px
        height 160px
      .btn-row
        margin 0 0 -15px
        width 100%
        clearfix()
        .col
          padding 0 15px 0
        .btn
          display table
          float left
          table-layout fixed
          text-align center
          vertical-align middle
          a, button
            color #00B5D7
            border 1px solid
            border-radius 3px
            display table-cell
            height 70px
            margin 0 0 30px
            position relative
            text-decoration none
            transition all 300ms ease
            vertical-align middle
            width 100%
            @extend .tr-up
            small
              color #A1A1A1
              font-weight 300
              text-transform lowercase
            &:hover
              background-color rgba(#00B5D7, 0.1)
            input[type=file]
              appearance none
              background none
              border 0
              outline 0
              opacity 0
              position absolute
              left 0
              right 0
              bottom 0
              top 0
            form
              display none
              height 0
              width 0
      .small-btn-row
        margin 0 -5px
        clearfix()
        .btn
          float left
          padding 0 5px
          text-align center
          @extend .col-sm-4
          &.active
            a
              color #00B5D7
              &:hover
                background-color rgba(#00B5D7, 0.1)
          a
            color #E1E1E1
            border 1px solid
            border-radius 3px
            display block
            height 60px
            line-height 60px
            margin 0 0 30px
            text-decoration none
            transition all 300ms ease
            vertical-align middle
            width 100%
            @extend .tr-up
            &:hover
              background-color rgba(#E1E1E1, 0.25)
            small
              color #A1A1A1
              font-weight 300
              text-transform lowercase
      .options
        margin-top 15px
        a
          color $text
          font-weight 600
    .select__wrapper
      background-color white
      display none
      .select__wrapper-gallery
        border 1px solid #E1E1E1
        border-radius 3px
        height 260px
        margin-bottom 30px
        overflow scroll
        padding 30px 15px
        .col
          padding 0 15px 30px
        .active .thumb
          border 2px solid $green
        .thumb
          background-size cover
          border 2px solid transparent
          border-radius 3px
          cursor pointer
          height 100px
          overflow hidden
          width 100%
      .btn-row > .btn > a, .btn-row > .btn > form > button.submit
        background-color transparent
        border 2px solid #59C77F
        color #59C77F
        font-size 20px
        font-weight 600
        tr-ls(0.05em)
        &:hover
          background rgba(#59C77F, 0.15)
// Pagination for Blogs / Events
.pagination
  ul
    list-style none
    margin 0
    padding 0
    li
      display inline-block
      line-height 24px
      padding 0 6px
      &.active
        border 2px solid $green
        margin-right 3px
        a
          color $green
  h4
    line-height 24px
    font-weight 600
  a
    color #E6E6E6
    text-decoration none
    transition color 300ms ease
    display inline-block
    line-height 24px
    padding 0 6px
    &.selected
      border 2px solid $green
      color $green
      margin 0 3px
    &:hover
      color lighten($text, 15%)
  .pg-next:before
    content 'Next '
  .pg-prev:after
    content ' Previous'
  .col-md-6
    .pg-next, .pg-prev
      display none
  .col-md-3
    &.next .pg:not(.pg-next)
      display none
    &.prev .pg:not(.pg-prev)
      display none
.pane:not(.active)
  display none
.modal
  background-color rgba(black, 0.5)
  bottom 0
  left 0
  position fixed
  right 0
  top 0
  z-index 3
  // Hide
  opacity 0
  transition all 300ms ease
  visibility hidden
  &.active
    opacity 1
    visibility visible
  .modal-container
    background-color #FFF
    margin 45px auto
    max-width 475px
    padding 25px
    @media (min-width $sm)
      padding 50px
    width 100%
    h1, h2, h3, h4, h5, h6, p
      margin 0
    .btn
      display block
      position relative
      text-align center
      width 100%
      input
        bottom 0
        left 0
        opacity 0
        position absolute
        right 0
        top 0
        z-index 1
    .facebook-login
      background-color #3B5998
      border-radius 2px
      color white
      display block
      font-weight 600
      line-height 50px
      transition all 300ms ease
      text-align center
      text-decoration none
      width 100%
      @extend .tr-up
      tr-ls(0.05em)
      &:hover
        background-color darken(#3B5998, 15%)

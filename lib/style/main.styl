.lgbt
  cursor pointer
    
.nav.nav-main ul li.dropdown-menu
  position relative
  &:hover
    border-bottom 0 !important
    a
      border-bottom 0 !important
    ul
      left -50%
      opacity 1
  ul
    background-color rgba($primary, 0.95)
    border-bottom-left-radius 2px
    border-bottom-right-radius 2px
    border-top 2px solid lighten($primary, 25%)
    box-shadow 0 0 10px rgba(black, 0.5)
    display inline-block
    left -9999px
    margin 0
    opacity 0
    padding 0
    position absolute
    transition opacity 300ms ease
    text-align center
    top 20px
    width 200%
    & > li, & > li > a
      border-bottom 0 !important
      display block
      font-size 11px
      line-height initial
      margin 0
    & > li > a
      padding-bottom 15px
      padding-top 15px

footer
	background-color $light-gray
	padding-bottom 60px
	padding-top 60px
	@media (min-width: $sm)
		background-image url('/bbsc/images/bbbs-icon-main.png')
		background-position center center
		background-repeat no-repeat
	clearfix()
	.col
		padding-bottom 0 !important
	.menus
		ul.menu
			list-style none
			margin 0
			padding 0
			&.bold li
				color #3B3B3B
				font-weight 600
			li
				color $text
				font-weight 500
				margin-bottom 15px
				&:last-of-type
					margin-bottom 0
				a
					color inherit
					text-decoration none
					&:hover
						text-decoration  underline
	.meta
		a.donate-button
			background $primary
			border 1px solid transparent
			color $light-gray
			cursor pointer
			display inline-block
			font-weight 600
			margin-bottom 30px
			padding 10px 15px
			text-decoration none
			transition all 300ms ease
			&:hover
				background rgba($primary, 0.75)
				border 1px solid $primary
		ul.social
			list-style none
			margin 0 0 50px
			padding 0
			li
				color white
				display inline
				line-height 31px
				a
					background $green
					border 1px solid transparent
					color inherit
					display inline-block
					height 30px
					text-align center
					text-decoration none
					transition all 300ms ease
					width 30px
					&:hover
						background rgba($green, 0.75)
						border 1px solid $green
		div.meta-copyright
			color #7C7C7C
			p
				font-size 14px
				font-weight 600
				margin 0
			small
				font-size 14px
	@media (min-width: $sm)
		.center
			text-align center
		.right
			text-align right
			
div.sub-footer
	background-color $lightest-gray
	&.inverse
		background-color white
	color $text
	padding-bottom 60px
	padding-top 60px
	@media (max-width: $sm)
		.center
			text-align left !important
	h1, h2
		font-weight 300
		margin-bottom 30px
		margin-top 0
		@extend .tr-up
		p
			font-size 18px
			margin 0 0 10px
			@extend .tr-init
			a
				font-weight 600
	h3
		margin 0
		@extend .tr-up
	small
		font-size 16px
	ul, ol
		list-style none
		padding 0
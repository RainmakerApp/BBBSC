body.show-mobile
	.nav.nav-main div.mobile-menu
		opacity 1
		visibility visible
.nav
	padding-bottom 25px
	padding-top 25px
	position relative
	z-index 2
	clearfix()
	&.nav-main
		&:not(.translucent)
			background-color rgba(#660099, 0.5)
		&.nav-dark
			background-color rgba(#660099, 1)
			div.laptop-menu
				background-color rgba(#660099, 1)
				ul.menu
					text-align center
					li:first-of-type
						margin-left 0
						padding-left 0
			ul.md-navigation,
			ul.sm-navigation
				li
					a.donate-button
						color #660099
						font-weight 800
						i
							span,
							span:after,
							span:before
								background #660099
								height 3px
							&.active span
								background transparent
		color #FFF
		position relative
		div.logo
			height 66px
			width auto
		ul.lg-navigation, ul.md-navigation, ul.sm-navigation
			list-style none
			margin 0
			padding 0
			position relative
			li
				color #FFF
				a
					color inherit
					text-decoration none
				&.toggle-navigation
					display inline-block
					position relative
					z-index 4
					i
						display block
						cursor pointer
						position relative
						height 20px
						width 20px
						span, span:after, span:before
							background #FFF
							content ''
							height 2px
							position absolute
							transition all 0.3s ease
							width 20px
						span
							top 14px
						span:after
							top -5px
						span:before
							bottom -5px
						&.active
							span
								background transparent
								&:after, &:before
									top 0
								&:after
									transform rotate(45deg)
								&:before
									transform rotate(-45deg)
				&.buttons
					line-height 0
					margin 0
					padding 0
					position absolute
					right 0
					top -25px
					span.login, span.lgbt
						display inline-block
						font-size 12px
						float left
						line-height 14px
					span.login
						background $secondary
						padding 5px 10px
						tr-ls(0.05em)
					span.lgbt
						margin-left 10px
						table
							height 24px
							width 40px								
		// Nav for screens >1400px
		ul.lg-navigation
			li
				display inline
				font-size 14px
				font-weight 600
				line-height 66px
				margin-left 15px
				a
					border-bottom 2px solid transparent
					padding-bottom 4px
					transition border-color 300ms ease
					&:hover, &.active
						border-bottom 2px solid white
					&.donate-button
						background #FFF
						border 1px solid transparent
						color $primary
						font-weight 600
						padding 10px 15px
						transition all 300ms ease
						i
							display inline-block
						&:hover
							border 1px solid white
							background rgba(white, 0.75)
		// Nav for screens >1100px & <1399px
		ul.md-navigation
			li
				display inline
				font-size 12px
				font-weight 600
				line-height 66px
				margin-left 15px
				a
					border-bottom 2px solid transparent
					padding-bottom 4px
					transition border-color 300ms ease
					&:hover, &.active
						border-bottom 2px solid white
					&.donate-button
						background #FFF
						border 1px solid transparent
						color $primary
						font-weight 600
						padding 10px 15px
						transition all 300ms ease
						i
							display inline-block
							margin-right 5px
							span,
							span:before,
							span:after
								background-color $primary
						&:hover
							border 1px solid white
							background rgba(white, 0.75)
		// Nav for Screens <1099px
		ul.sm-navigation
			li
				display inline
				line-height 66px
				margin-left 15px
				a.donate-button
					background #FFF
					border 1px solid transparent
					color $primary
					font-weight 600
					padding 10px 15px
					transition all 300ms ease
					i
						display inline-block
						margin-right 5px
						span,
						span:before,
						span:after
							background-color $primary
					&:hover
						border 1px solid white
						background rgba(white, 0.75)
		div.mobile-menu
			background-color rgba($primary, 0.95)
			bottom 0
			opacity 0
			left 0
			opacity 0
			position fixed
			right 0
			text-align center
			transition all 300ms ease
			top 0
			visibility hidden
			z-index 3
			ul.menu
				left 0
				list-style none
				margin 0
				padding 0
				position absolute
				right 0
				transform translateY(25%)
				top 0
				li
					color #FFF
					font-size 24px
					font-weight 600
					margin-bottom 30px
					&:last-of-type
						margin-bottom 0
					@extend .tr-up
					a
						color inherit
						text-decoration none
		div.laptop-menu
			background-color rgba($primary, 0.5)
			height 0
			overflow hidden
			position absolute
			right 0
			text-align right
			transition all 300ms ease
			top 116px
			width 100%
			z-index 3
			&.show
				height 30px
			ul.menu
				list-style none
				margin 0
				padding 5px 0
				li
					color #FFF
					display inline
					font-size 14px
					font-weight 600
					margin-bottom 30px
					margin-left 15px
					padding-left 15px
					&:nth-child(n+2)
						border-left 1px solid
					&:last-of-type
						margin-bottom 0
					@extend .tr-up
					a
						color inherit
						text-decoration none
		// Navigation Queries
		@media (min-width: 1400px)
			ul.lg-navigation
				display block
			ul.md-navigation, ul.sm-navigation
				display none
			div.mobile-menu, div.laptop-menu
				display none !important
		@media (min-width: 1100px) and (max-width: 1399px)
			ul.md-navigation
				display block
			ul.lg-navigation, ul.sm-navigation
				display none
			div.mobile-menu
				display none !important
		@media (max-width: 1099px)
			ul.sm-navigation
				display block
			ul.lg-navigation, ul.md-navigation
				display none
			div.laptop-menu
				display none !important

@media (max-width 1200px)
	.show-large
		display none
	.show-laptop
		display block
		
@media (min-width 1201px)
	.show-large
		display block
	.show-laptop
		display none
				
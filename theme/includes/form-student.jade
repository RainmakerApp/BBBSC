.glass-form__wrapper#student
  .wrapper__body
    span.shut
    .body__header
      ul
        li.active(id='1') Youth Info
        li(id='2') Parent Info
        li(id='3') General Info
        li(id='4') Stengths &amp; Challenges
        li(id='5') Notes
        li(id='6' style='display: none;') Notes
    .body__content: form.form
      .container-fluid.tab.tab-1.in
        h1 YOUTH INFO
          small We’d love to get to know you...tell us about yourself.
        .row.columns
          .col.col-sm-12.col-md-5
            .form-group.two
              label Full Name
                span *
              .col.col-sm-6.col-md-6.first
                input(type='text', placeholder='First Name')
              .col.col-sm-6.col-md-6
                input(type='text', placeholder='Last Name')
          //- End Group One
          .col.col-sm-6.col-md-3
            .form-group.three
              label Birth Date
              .col.col-sm-3.first
                input(type='text', placeholder='MM')
              .col.col-sm-3.second
                input(type='text', placeholder='DD')
              .col.col-sm-6
                input(type='text', placeholder='YYYY')
          //- End Group Two
          .col.col-sm-3.col-md-1
            .form-group
              label Age
                span *
              input(type='text', name='age')
          //- End Group Three
          .col.col-sm-3.col-md-3
            .form-group
              label Gender
              input(type='text', name='gender')
          //- End Group Four
        .row.columns
          .col.col-sm-12.col-md-6.select
            .form-group
              label Ethnicity
              select
                option Caucasian
                option African American
                option Native American
                option Other Ethnicities?
          //- End Group One
          .col.col-sm-12.col-md-6
            .form-group
              label If Native American, What Tribe?
              input(type='text', name='tribe')
          //- End Group Two
        .row.columns
          .col.col-sm-12.col-md-4
            .form-group
              label Child's School
              input(type='text')
          //- End Group One
          .col.col-sm-12.col-md-3
            .form-group
              label School District
              input(type='text')
          //- End Group Two
          .col.col-sm-12.col-md-2
            .form-group
              label Grade
              input(type='text')
          //- End Group Three
          .col.col-sm-12.col-md-3
            .form-group
              label Student ID Number
              input(type='text')
          //- End Group Four
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group
              label Teacher Name
              input(type='text')
          .col.col-sm-12.col-md-6
            .form-group
              label School Counselor's Name
              input(type='text')
      .container-fluid.tab.tab-2
        h1 PARENT / GAURDIAN INFO
          small Tell us a little bit about you
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group.two
              label PARENT / GAURDIAN NAME
                span *
              .col.col-sm-6.col-md-6.first
                input(type='text', placeholder='First Name')
              .col.col-sm-6.col-md-6
                input(type='text', placeholder='Last Name')
          //- End Group One
          .col.col-sm-12.col-md-6
            .form-group.three
              label RELATIONSHIP TO CHILD
                span *
              input(type='text')
          //- End Group Two
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group.two
              label PARENT / GAURDIAN NAME
              .col.col-sm-6.col-md-6.first
                input(type='text', placeholder='First Name')
              .col.col-sm-6.col-md-6
                input(type='text', placeholder='Last Name')
          //- End Group One
          .col.col-sm-12.col-md-6
            .form-group.three
              label RELATIONSHIP TO CHILD
              input(type='text')
          //- End Group Two
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group
              label Street Address
                span *
              input(type='text')
          //- End Group One
          .col.col-sm-6.col-md-3
            .form-group
              label City
                span *
              input(type='text')
          //- End Group Two
          .col.col-sm-6.col-md-3
            .form-group
              label Zip Code
                span *
              input(type='text')
          //- End Group Two
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group
              label Home Phone Number
                span *
              input(type='text')
          .col.col-sm-12.col-md-6
            .form-group
              label Cell Phone Number
              input(type='text')
        .row.columns
          .col.col-sm-12.col-md-12
            .form-group
              label Email Address
              input(type='text')
        hr
        .row.columns
          .col.col-sm-12.col-md-5.select
            .form-group
              label Marital Status
              select
                option Married
                option Single
                option Other Options (?)
          .col.col-sm-12.col-md-7.select
            .form-group
              label Are One or Both Parents Currently or Recently Incarcerated?
              select
                option Yes
                option No
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group
              label 1. PARENT / GUARDIAN’S EMPLOYERS (if applicable)
              input(type='text')
          .col.col-sm-6.col-md-2
            .form-group
              label Work Phone
              input(type='text')
          .col.col-sm-6.col-md-4
            .form-group.check
              label May We Contact You At Work?
              .options
                label
                  input(type='checkbox')
                  | No
                label
                  input(type='checkbox')
                  | Yes
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group
              label 2. PARENT / GUARDIAN’S EMPLOYERS (if applicable)
              input(type='text')
          .col.col-sm-6.col-md-2
            .form-group
              label Work Phone
              input(type='text')
          .col.col-sm-6.col-md-4
            .form-group.check
              label May We Contact You At Work?
              .options
                label
                  input(type='checkbox')
                  | No
                label
                  input(type='checkbox')
                  | Yes
      .container-fluid.tab.tab-3
        h1 General Info
          small We'd love to get to know you.. tell us about yourself.
        .row.columns
          .col.col-sm-12
            .form-group
              label Names and Ages of Family Members in the Home
              input(type='text')
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group.check
              label Are you currently recieving any of the following assistance?
                span *
              .options
                label
                  input(type='checkbox')
                  | Reduced Lunch
                br
                label
                  input(type='checkbox')
                  | Social Security
                br
                label
                  input(type='checkbox')
                  | TANF
                br
                label
                  input(type='checkbox')
                  | Child Support
                br
                label
                  input(type='checkbox')
                  | Food Stamps
          .col.col-sm-12.col-md-6
            .form-group.check
              label Is the child involved with any of the following services? (Click All that applies)
              .options
                label
                  input(type='checkbox')
                  | Mental Health (Couseling / Therapy)
                br
                label
                  input(type='checkbox')
                  | Human Services
                br
                label
                  input(type='checkbox')
                  | Court Involvement
                br
                label
                  input(type='checkbox')
                  | Other
                  input(type='text')
        .row.columns
          .col.col-sm-12.col-md-6
            .form-group.check
              label Has your Child had any Contact with Law Enforcement?
              .options
                label
                  input(type='checkbox')
                  | Yes
                label
                  input(type='checkbox')
                  | No
          .col.col-sm-12.col-md-6
            .form-group
              label If Yes, please Explain
              input(type='text')
        .row.columns
          .col.col-sm-12.col-md-12
            .form-group.check
              label IS THE CHILD CURRENTLY PARTICIPATING IN OTHER ORGANIZATIONS OR COMMUNITY ACTIVITIES?
              .row.columns.options.tons
                .col.col-sm-6.col-md-4: label
                  input(type='checkbox')
                  | Denver Kids
                .col.col-sm-6.col-md-4: label
                  input(type='checkbox')
                  | Denver Partners
                .col.col-sm-6.col-md-4: label
                  input(type='checkbox')
                  | Other Mentoring Program
                .col.col-sm-6.col-md-4: label
                  input(type='checkbox')
                  | Boy / Girl Scouts
                .col.col-sm-6.col-md-4: label
                  input(type='checkbox')
                  | Organized Sports
                .col.col-sm-6.col-md-4: label
                  input(type='checkbox')
                  | Boys and Girls Club
                .col.col-sm-6.col-md-4: label
                  input(type='checkbox')
                  | Other
                  input(type='text')
      .container-fluid.tab.tab-4
        h1 STRENGTHS
        .row.columns: .col.col-sm-12: .form-group
          label School
          input(type='text')
        .row.columns: .col.col-sm-12: .form-group
          label Home
          input(type='text')
        .row.columns: .col.col-sm-12: .form-group
          label Behaviors
          input(type='text')
        .row.columns: .col.col-sm-12: .form-group
          label Others
          input(type='text')
        h1 CHALLENGES
        .row.columns: .col.col-sm-12: .form-group
          label School
          input(type='text')
        .row.columns: .col.col-sm-12: .form-group
          label Home
          input(type='text')
        .row.columns: .col.col-sm-12: .form-group
          label Behaviors
          input(type='text')
        .row.columns: .col.col-sm-12: .form-group
          label Others
          input(type='text')
      .container-fluid.tab.tab-5
        h1 NOTES:
        .row.columns: .col.col-sm-12: .form-group
          label Why are you interested in getting your child a mentor?
          input(type='text')
        .row.columns: .col.col-sm-12: .form-group
          label Please provide us with any additional information you would like us to know about your child.
          input(type='text')
        .row.columns
          .col.col-sm-12
            p I give permission for the above named minor child to apply for Big Brothers Big Sisters of Colorado, Inc. I understand that this completed application does not guarantee participation or acceptance in Big Brothers Big Sisters of Colorado. All information will be held by BBBSC is confidential.
          .col.col-sm-8: .form-group
            label To Sign, Please Type your Full Name Below
              span *
            input(type='text')
          .col.col-sm-4: .form-group
            label Today's Date
              span *
            input(type='text')
      .container-fluid.tab.tab-6
        .success-message
          div.check
            span
          h1 Success message!
    .body__footer
      .nav.container-fluid
        hr
        .pull-left
          a(class='back', href='#') Back
        .pull-right
          a(class='next', href='#') Next